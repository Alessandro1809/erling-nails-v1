---
import type { SocialLink, Service } from '@/utils/AboutComponent.data';
import { socialLinks, services } from '@/utils/AboutComponent.data';
import { Image } from 'astro:assets';
import AboutImage from '../assets/AboutImage.jpeg';
---

<section class="relative py-20">
  <!-- Botón Flotante para Volver -->
  <a 
    href="/" 
    class="fixed bottom-8 right-8 bg-gradient-to-r from-theme-red to-[#7a00b3] text-white p-4 rounded-full shadow-lg hover:scale-110 transition-all duration-300 z-50 group"
    aria-label="Volver a la página principal"
  >
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      class="h-6 w-6 transform group-hover:-translate-x-1 transition-transform duration-300" 
      fill="none" 
      viewBox="0 0 24 24" 
      stroke="currentColor"
    >
      <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M10 19l-7-7m0 0l7-7m-7 7h18"
      />
    </svg>
  </a>

  <article class="container mx-auto px-4">
    <!-- Header -->
    <header class="text-center md:text-left mb-16">
      <main class="flex flex-col md:grid md:grid-cols-2 gap-8 items-center">
        <!-- Mobile image -->
        <figure class="md:hidden w-52 h-52 mx-auto mb-6 rounded-full bg-gradient-to-r from-theme-red to-[#7a00b3] p-2 shadow-xl animate-glow transform hover:scale-[1.02] transition-transform duration-500">
          <div class="w-full h-full rounded-full overflow-hidden">
            <Image 
              src={AboutImage}
              alt="Erling working on a nail design"
              class="w-full h-full object-cover transition-opacity duration-300"
              width={208}
              height={208}
              loading="eager"
            />
          </div>
        </figure>

        <!-- Desktop image -->
        <figure class="hidden md:block w-full aspect-square max-w-[400px] rounded-full bg-gradient-to-r from-theme-red to-[#7a00b3] p-2.5 shadow-xl animate-glow transform hover:scale-[1.02] transition-transform duration-500">
          <div class="w-full h-full rounded-full overflow-hidden">
            <Image 
              src={AboutImage}
              alt="Erling working on a nail design"
              class="w-full h-full object-cover transition-opacity duration-300"
              width={400}
              height={400}
              loading="eager"
            />
          </div>
        </figure>

        <article>
          <h1 class="font-special text-5xl md:text-7xl mb-6">
            Hi, I'm 
            <span class="bg-gradient-to-r from-theme-red to-[#7a00b3] bg-clip-text text-transparent">Erling</span>
          </h1>
          <p class="text-xl text-gray-600 max-w-5xl mx-auto m-6">
            With over a decade immersed in the world of hand and foot care, I've focused on perfecting every skill, covering both traditional techniques that always work and the latest industry innovations. I'm committed to delivering first-class, customized service with attention to every detail, ensuring each person feels unique and completely satisfied with the result.
          </p>
          <p class="text-xl text-gray-600 max-w-5xl mx-auto">
            I firmly believe that continuous training is essential to give my best, so I stay up-to-date by participating in courses, seminars, and training that help me develop professionally and enhance the experience of those who trust in me. Here, I not only beautify your nails but also value your time, enhance your personal style, and promote your overall well-being.
          </p>
        </article>
      </main>
    </header>

    <!-- Services Grid -->
    <section class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      {services.map((service: Service) => (
        <article class="bg-white p-8 rounded-lg shadow-lg transform hover:-translate-y-1 transition-all duration-300">
          <div class="text-theme-red mb-4" set:html={service.icon} />
          <h2 class="text-2xl font-special mb-4">{service.name}</h2>
          <p class="text-gray-600">{service.description}</p>
        </article>
      ))}
    </section>

    <!-- Contact Information -->
    <section class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <div class="grid md:grid-cols-2">
        <!-- Image -->
        <figure class="relative h-64 md:h-auto">
          <img 
            src="https://res.cloudinary.com/drwd1wtvt/image/upload/v1725497288/unas4_pawj3w.jpg"
            alt="Erling Nails workspace"
            class="absolute inset-0 w-full h-full object-cover"
          />
        </figure>

        <!-- Information -->
        <article class="p-12">
          <h2 class="font-special text-4xl mb-6">Contact Me</h2>
          
          <address class="space-y-6 not-italic">
            <!-- Location -->
            <div class="flex items-start space-x-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-theme-red flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <div>
                <h3 class="font-semibold text-lg">Location</h3>
                <p class="text-gray-600">Playas del Coco, Guanacaste<br/>Costa Rica</p>
              </div>
            </div>

            <!-- Schedule -->
            <div class="flex items-start space-x-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-theme-red flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div>
                <h3 class="font-semibold text-lg">Hours</h3>
                <p class="text-gray-600">
                  Monday to Saturday<br/>
                  9:00 AM - 6:00 PM
                </p>
              </div>
            </div>

            <!-- Social Media -->
            <nav class="flex items-center space-x-4 pt-4">
              {socialLinks.map((link: SocialLink) => (
                <a 
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-600 hover:text-theme-red transition-colors duration-300"
                  aria-label={`Follow us on ${link.name}`}
                  set:html={link.icon}
                />
              ))}
            </nav>
          </address>
        </article>
      </div>
    </section>
  </article>
</section>

<style>
  .container {
    max-width: 1280px;
  }

  @keyframes glow {
    0%, 100% {
      box-shadow: 0 0 15px rgba(255, 41, 117, 0.3),
                  0 0 30px rgba(255, 41, 117, 0.2),
                  0 0 45px rgba(122, 0, 179, 0.1);
    }
    50% {
      box-shadow: 0 0 20px rgba(255, 41, 117, 0.4),
                  0 0 40px rgba(255, 41, 117, 0.3),
                  0 0 60px rgba(122, 0, 179, 0.2);
    }
  }

  .animate-glow {
    animation: glow 3s ease-in-out infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-glow {
      animation: none;
      box-shadow: 0 0 15px rgba(255, 41, 117, 0.3),
                  0 0 30px rgba(255, 41, 117, 0.2),
                  0 0 45px rgba(122, 0, 179, 0.1);
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const images = document.querySelectorAll('.image-fade');
    images.forEach(img => {
      if (img instanceof HTMLImageElement) {
        if (img.complete) {
          img.classList.add('loaded');
        } else {
          img.addEventListener('load', () => {
            img.classList.add('loaded');
          });
        }
      }
    });
  });
</script> 
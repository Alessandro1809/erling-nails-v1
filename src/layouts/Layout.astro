---
import '../styles/global.css';
import RichSnnipppets from '@/components/RichSnnipppets.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
---
<!doctype html>
<html lang="en" class="overflow-x-hidden light [color-scheme:light]">
	<head>
		<script is:inline>
			// Cargar el polyfill inmediatamente
			(async function() {
				try {
					const module = await import('/polyfills/messageChannel.js');
					if (typeof MessageChannel === 'undefined' && module.default) {
						Object.defineProperty(globalThis, 'MessageChannel', {
							value: module.default,
							writable: false,
							configurable: false
						});
					}
				} catch (error) {
					console.warn('Error loading MessageChannel polyfill:', error);
				}
			})();
		</script>
		
		<script is:inline type="text/javascript" src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/ScrollTrigger.min.js"></script>
		<script is:inline type="text/javascript" src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/gsap.min.js"></script>
		
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/png" href="/ENWhite.png" />
		<meta name="generator" content={Astro.generator} />

		<!-- Open Graph (Facebook, WhatsApp, LinkedIn, etc.) -->
		<meta property="og:title" content="Erling Nails - Manicura y Pedicura en Playas del Coco" />
		<meta property="og:description" content="Descubre nuestro servicio profesional de uñas en Guanacaste. Diseños únicos y atención personalizada. Mira el video de presentación." />
		<meta property="og:type" content="video.other" />
		<meta property="og:url" content="https://erling-nails-v1.pages.dev" />
		<meta property="og:image" content="https://erling-nails-v1.pages.dev/EN.png" />
		<meta property="og:video" content="https://erling-nails-v1.pages.dev/hero-video.webm" />
		<meta property="og:video:type" content="video/webm" />
		<meta property="og:video:width" content="1280" />
		<meta property="og:video:height" content="720" />

		<title>Erling Nails</title>
	<RichSnnipppets />
	</head>
	<body class="relative -z-20 min-h-screen w-full overflow-x-hidden bg-theme-white text-black">
		
		<main class="container mx-auto max-w-7xl px-4"> 
			
			<Header />
				<slot />	
			</main>
			<Footer />
		<script src="../utils/gsapConfig.js"></script>
	</body>
</html>



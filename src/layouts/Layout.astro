---
import '../styles/global.css';
import RichSnnipppets from '@/components/RichSnnipppets.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
---
<!doctype html>
<html lang="en">
	<head>
		
		
		<script  type="text/javascript" src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/ScrollTrigger.min.js"></script>
		<script  type="text/javascript" src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/gsap.min.js"></script>
		<!-- <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
		<script type="text/javascript" src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script> -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- Open Graph (Facebook, WhatsApp, LinkedIn, etc.) -->
		<meta property="og:title" content="Erling Nails - Manicura y Pedicura en Playas del Coco" />
		<meta property="og:description" content="Descubre nuestro servicio profesional de uñas en Guanacaste. Diseños únicos y atención personalizada. Mira el video de presentación." />
		<meta property="og:type" content="video.other" />
		<meta property="og:url" content="https://tusitio.com/" />
		<meta property="og:image" content="https://tusitio.com/preview.jpg" />
		<meta property="og:video" content="https://tusitio.com/hero-video.webm" />
		<meta property="og:video:type" content="video/webm" />
		<meta property="og:video:width" content="1280" />
		<meta property="og:video:height" content="720" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="player" />
		<meta name="twitter:title" content="Erling Nails - Belleza en cada detalle" />
		<meta name="twitter:description" content="Mira el video y conoce nuestros servicios de manicura y pedicura profesional en Playas del Coco." />
		<meta name="twitter:image" content="https://tusitio.com/preview.jpg" />
		<meta name="twitter:player" content="https://tusitio.com/hero-video.webm" />
		<meta name="twitter:player:width" content="1280" />
		<meta name="twitter:player:height" content="720" />

		<title>Erling Nails</title>
	<RichSnnipppets />

	</head>
	<body class="relative -z-20 h-full w-full bg-gray-800 text-theme-white">
		<div class="absolute -z-10 inset-0 bg-secondary bg-[size:20px_20px] opacity-90 blur-[100px]"></div>
		<main class="container mx-auto max-w-6xl p-4"> 
			
			<Header />
				<slot />
			<Footer />
		
		</main>
		<script>
		gsap.registerPlugin(ScrollTrigger);

		window.addEventListener("load", () => {
			gsap.timeline({
				scrollTrigger: {
					trigger: ".bento-section",
					start: "60% 60%",
					ease: "power2.inOut",
					end: "+= 100%",
					scrub:0.5,
					pin: true,
					refreshPriority: 1,
					toggleActions: "play none none reverse",
				},
			}).to([".bento-section"], {
				scale: 1.5,
				opacity: 0,
				height: 900,
				lazy: true,
			
			})
			gsap.fromTo(
			".gallery-section",
			{ opacity: 0, x: -1200,rotate: -55, scale:0.5 },
			{
			opacity: 1,
			x: 0,
			y: 0,
			duration: 0.5,
			rotate:0,
			 scale:1,
			ease: "power2.inOut",
			scrollTrigger: {
				trigger: ".gallery-section",
				start: "top 340%",
				end: "50% 60%",
				scrub: 1,
				toggleActions: "play none none reverse",
			},
			})
			gsap.fromTo(
				".opinion-section",
				{ opacity: 0, x: -1200,rotate: 55, scale:0.5 },
				{
				opacity: 1,
				x: 0,
				y: 0,
				duration: 0.5,
				rotate:0,
				scale:1,
				ease: "power2.inOut",
				scrollTrigger: {
					trigger: ".opinion-section",
					start: "top 50%",
					end: "100% 100%",
					scrub: 2,
					toggleActions: "play none none reverse",
				},
				})

			});
			gsap.fromTo(
				".contact-section",
				{ opacity: 0,y:300, scale:0.5 },
				{
				opacity: 1,
				y: 0,
				duration: 0.5,
				
				scale:1,
				ease: "power2.inOut",
				scrollTrigger: {
					trigger: ".contact-section",
					start: "top 100%",
					end: "10% 80%",
					scrub:2,
					toggleActions: "play none none reverse",
				},
				})

			
			
		</script>
		<!-- <script>
		AOS.init();
		</script> -->
	</body>
</html>


